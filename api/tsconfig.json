{
    "compilerOptions": {
        "typeRoots": ["src/typings", "./node_modules/@types"],
        "target": "es2017",
        "module": "commonjs",
        "outDir": "dist",
        "pretty": true,
        "esModuleInterop": true,
        "strict": true,
        "rootDir": "src",
        "sourceMap": true,
        "moduleResolution": "node"
    },
    "exclude": ["node_modules", "dist"]
}
